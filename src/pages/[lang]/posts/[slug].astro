---
import { getCollection } from 'astro:content';
import type { GetStaticPaths } from 'astro';
import PostLayout from '@/layouts/PostLayout.astro';
import { blogComponents } from '@/mdx/blog-components';
import { generateCanonicalUrl } from '@/utils/seo';

export const getStaticPaths = (async () => {
  const posts = await getCollection('posts', ({ data }) => {
    return import.meta.env.PROD ? !data.draft : true;
  });

  return posts.map((post) => ({
    params: { 
      lang: post.data.lang,
      slug: post.slug 
    },
    props: { post },
  }));
}) satisfies GetStaticPaths;

const { lang } = Astro.params as { lang: 'en' | 'es' };
const { post } = Astro.props;
const { Content } = await post.render();

// Find translations (posts with same `ref` but different `lang`)
const allPosts = await getCollection('posts', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

const translations = post.data.ref
  ? allPosts.filter(p => 
      p.data.ref === post.data.ref && 
      p.data.lang !== post.data.lang
    )
  : [];

// Build alternateLinks array for hreflang tags
const alternateLinks = translations.map(t => ({
  href: generateCanonicalUrl(`/${t.data.lang}/posts/${t.slug}`),
  lang: t.data.lang,
}));

// SEO
const canonical = generateCanonicalUrl(`/${lang}/posts/${post.slug}`);
---

<PostLayout
  frontmatter={post.data}
  canonical={canonical}
  lang={post.data.lang}
  alternateLinks={alternateLinks}
>
  <Content components={blogComponents} />
</PostLayout>
