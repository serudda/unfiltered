---
import { DownloadIcon, InfoIcon } from 'lucide-react';
import Button from '@/components/ui/Button.astro';

interface Props {
  vaultSlug: string;
}

const { vaultSlug } = Astro.props;
const downloadUrl = `/downloads/${vaultSlug}-vault.zip`;
---

<div class="my-8 border border-border rounded-xl bg-zinc-900/50 overflow-hidden">
  <div class="flex flex-col">
    <div class="flex items-center gap-4 p-6">
      <div class="space-y-1">
        <h3 class="text-lg font-semibold text-foreground m-0! leading-tight">Installation</h3>
        <p class="text-muted-foreground text-base m-0! leading-relaxed">
          Download and extract this Vault to a dedicated folder. It includes the complete folder structure and the <code>.claude/skills</code> configuration ready to use.
        </p>
      </div>
    </div>
    
    <div class="p-6 flex flex-col sm:flex-row gap-4 items-start sm:items-center border-t border-border">
      <Button href={downloadUrl} download variant="primary" size="base">
        <DownloadIcon />
        Download Vault .zip
      </Button>
      
      <p class="text-xs text-muted-foreground m-0!">
        Contains starter files and skills.
      </p>
    </div>
  </div>
</div>
