---
const navItems = [
  { href: '/', label: 'Posts' },
  { href: '/notes', label: 'Notes' },
];
---

<header>
  <nav>
    <div class="flex items-center justify-between">
      <!-- Site Name / Logo -->
      <a 
        href="/" 
        class="text-2xl tracking-wide font-semibold font-logo no-underline hover:text-primary-300 transition-colors"
      >
        Unfiltered
      </a>
      
      <!-- Navigation -->
      <div class="flex items-center gap-6">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="text-sm no-underline text-muted-foreground hover:text-link transition-colors"
          >
            {item.label}
          </a>
        ))}
      </div>
    </div>
  </nav>
</header>
