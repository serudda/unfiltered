---
interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="border-t border-border mt-20">
  <div class="container-narrow py-8">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-muted-foreground">
      <!-- Copyright -->
      <p class="m-0">
        Â© {currentYear} Unfiltered. 
        {lang === 'es' ? 'Todos los derechos reservados.' : 'All rights reserved.'}
      </p>
      
      <!-- Links -->
      <div class="flex items-center gap-4">
        <a 
          href="/rss.xml" 
          class="no-underline hover:text-link transition-colors"
        >
          RSS
        </a>
        <a 
          href="https://github.com/serudda/unfiltered" 
          target="_blank"
          rel="noopener noreferrer"
          class="no-underline hover:text-link transition-colors"
        >
          GitHub
        </a>
      </div>
    </div>
  </div>
</footer>
